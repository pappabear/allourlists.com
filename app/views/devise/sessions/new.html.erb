<h3><b>Log in</b></h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <label for="user_email" class="col-sm-2 control-label">Email</label>

      <div class="col-sm-10">
        <input class="form-control input-lg" autofocus type="email" value="" name="user[email]" id="user_email">
        <div class="help-block with-errors"></div>
      </div>
    </div>


    <div class="form-group">
      <label for="user_password" class="col-sm-2 control-label">Password</label>

      <div class="col-sm-10">
        <input class="form-control input-lg" autocomplete="off" type="password" name="user[password]" id="user_password" />
        <div class="help-block with-errors"></div>
      </div>
    </div>


    <div class="form-group">
      <label for="user_remember_me" class="col-sm-2 control-label">Remember me</label>

      <div class="col-sm-10">
        <input name="user[remember_me]" type="hidden" value="0" /><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" />
      </div>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Sign In</button>
    </div>

<% end %>

<p>&nbsp;</p>
<%= render "devise/shared/links" %>
<p>&nbsp;</p>