<h3><b>Forgot your password?</b></h3>


<style>
    .alert {
        padding: 8px 35px 8px 14px;
        margin-bottom: 18px;
        color: #c09853;
        text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
        background-color: #fcf8e3;
        border: 1px solid #fbeed5;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
    }

    .alert-heading {
        color: inherit;
    }

    .alert .close {
        position: relative;
        top: -2px;
        right: -21px;
        line-height: 18px;
    }

    .alert-danger,
    .alert-error {
        color: #b94a48;
        background-color: #f2dede;
        border-color: #eed3d7;
    }
</style>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
      <label for="user_email" class="col-sm-2 control-label">Email</label>

      <div class="col-sm-10">
        <input class="form-control input-lg" type="email" value="" name="user[email]" id="user_email" placeholder="Enter your email" >
        <div class="help-block with-errors"></div>
      </div>
    </div>


    <div class="form-group">
      <button type="submit" class="btn btn-primary pull-right">Send me reset password instructions</button>
    </div>

<% end %>

<p>&nbsp;</p>
<%= render "devise/shared/links" %>
<p>&nbsp;</p>