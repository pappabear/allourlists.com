<section>

  <div class="row">

  <h3><b>My Lists</b>
    <ul class="pull-right" style="list-style: none;">
      <li><a href="#" data-toggle="modal" data-target="#modalAddListForm">NEW</a></li>
    </ul>
  </h3>

    </div>

  <div class="row">

    <div class="panel panel-default todo-list">
      <div class="panel-body">

        <%= render :partial => 'lists', :locals => {:lists => @lists} %>

      </div>
    </div>
  </div>

</section>


<!-- ADD / NEW MODAL -------------------------->
<div class="modal fade" id="modalAddListForm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Start a New List</h4>
      </div>
      <div class="modal-body" style="margin-bottom:-30px;">

        <%= form_for(@list, remote: true, format: :js, :authenticity_token => true, html: {class: 'form-horizontal'}) do |f| %>

            <div class="form-group">
              <label for="todo_subject" class="col-sm-2 control-label">Name</label>

              <div class="col-sm-10">
                <input type="text" class="form-control input-lg" id="list_name" name="list[name]" placeholder="Enter a name for this list" data-error="This can't be blank." required>
                <div class="help-block with-errors"></div>
              </div>
            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-primary" id="newListFormSubmitButton">Add</button>
            </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
<!-- ADD / NEW MODAL -------------------------->